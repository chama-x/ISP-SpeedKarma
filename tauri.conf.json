{
  "$schema": "https://tauri.app/config.schema.json",
  "productName": "ISP-SpeedKarma",
  "version": "0.1.0",
  "identifier": "com.speedkarma.isp-speedkarma",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "dist"
  },
  "app": {
    "windows": [
      {
        "title": "ISP-SpeedKarma",
        "width": 400,
        "height": 600,
        "resizable": true,
        "visible": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/32x32.png"
    ]
  }
}